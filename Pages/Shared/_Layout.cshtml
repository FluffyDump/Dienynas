<!DOCTYPE html>
<html lang="lt">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Mokinių dienynas</title>
</head>
<body>
    <header class="main-header" id="mainHeader">
        <h1 class="headerH1">Mokinių dienynas</h1>
        <button class="message-button" onclick="window.location.href='/MessageList'">Žinutės</button>
        <button class="message-button" onclick="window.location.href='/Grades'">Pažymiai</button>
        <button class="profile-button" onclick="window.location.href='/Profile'">Profilis</button>
        <button class="profile-button" onclick="window.location.href='/Schedule'">Tvarkaraštis</button>
        <button class="logout-button" onclick="showLogout()">Atsijungti</button>
    </header>

    <main>
        @RenderBody()
    </main>

    <div class="overlay" id="logoutOverlay" style="display: none;">
        <div class="popup">
            <p>Ar tikrai norite atsijungti?</p>
            <button class="logout-true" onclick="confirmLogout()">Taip</button>
            <button class="logout-false" onclick="hideLogout()">Ne</button>
        </div>
    </div>

    <script>
        function getCookie(name) {
            let cookieArr = document.cookie.split(";");
            for (let i = 0; i < cookieArr.length; i++) {
                let cookiePair = cookieArr[i].split("=");
                if (name == cookiePair[0].trim()) {
                    return decodeURIComponent(cookiePair[1]);
                }
            }
            return null;
        }

        if (!getCookie("access_token")) {
            document.getElementById("mainHeader").style.display = "none";
        }

        function confirmLogout() {
            console.log("confirmLogout called");
            console.log("Cookies before deletion: ", document.cookie);
            document.cookie = "access_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
            console.log("Cookies after deletion: ", document.cookie);
            window.location.href = '/Index';
        }

        function showLogout() {
            document.getElementById("logoutOverlay").style.display = "block";
        }

        function hideLogout() {
            document.getElementById("logoutOverlay").style.display = "none";
        }
    </script>
</body>

<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f4f7fc;
    margin: 0;
    padding: 0;
}

.main-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 20px;
    height: 30px;
    background-color: #333;
    color: #fff;
}

.headerH1 {
    margin: 0;
    font-size: 1.5em;
    height: 30px;
}

.logout-true {
    padding: 12px 20px;
    font-size: 16px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.logout-false {
    padding: 12px 20px;
    font-size: 16px;
    background-color: #dc3545;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.popup {
    background-color: white;
    border-radius: 8px;
    padding: 20px;
    text-align: center;
    margin: 50px auto;
    max-width: 260px;
}

.profile-button {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 8px 16px;
    font-size: 1em;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.profile-button:hover {
    background-color: #388E3C;
}

.logout-button {
    background-color: #f44336;
    color: #fff;
    border: none;
    padding: 8px 16px;
    font-size: 1em;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.logout-button:hover {
    background-color: #d32f2f;
}

.message-button {
    background-color: #2196F3;
    color: #00f;
    border: none;
    padding: 8px 16px;
    font-size: 1em;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.schedule-button {
    background-color: #b823ab;
    color: rgb(255, 255, 255);
    border: none;
    padding: 8px 16px;
    font-size: 1em;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.message-button:hover {
    background-color: #1976D2; 
}

.overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.show {
    display: block;
}

.message-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.message-table th, .message-table td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

.message-table th {
    background-color: #f2f2f2;
    font-weight: bold;
}

.message-table td a {
    color: #2196F3;
    text-decoration: none;
}

.message-table td a:hover {
    text-decoration: underline;
}

.message-table tr:hover {
    background-color: #f9f9f9;
}
</style>
</html>