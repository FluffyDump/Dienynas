@page
@model RazorPages.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="lt">
<head>
    <meta charset="utf-8" />
    <title>Prisijungimas</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h1>Prisijungimo Puslapis</h1>
    
    @if (!ModelState.IsValid)
    {
        <div style="color: red;">
            <ul>
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    
    <form method="post">
        <label>Vartotojo vardas arba el. pašto adresas:</label>
        <input type="text" name="UsernameOrEmail" required />
        <br />
        <label>Slaptažodis:</label>
        <input type="password" name="Password" required />
        <br />
        <button type="submit">Prisijungti</button>
    </form>

    <div class="overlay" id="2faOverlay" style="display: none;">
        <div class="popup">
            <label>2FA Kodas:</label>
            <input type="text" id="2faCode" />
            <br />
            <button onclick="validate2fa('/Profile')">Patvirtinti</button>
        </div>
    </div>
</body>
<script>
        function show2fa() {
            document.getElementById("2faOverlay").style.display = "block";
        }

        function validate2fa(redirectUrl) {
            if (document.getElementById("2faCode").value.trim()) {
                window.location.href = redirectUrl;
            }
        }
</script>
</html>
